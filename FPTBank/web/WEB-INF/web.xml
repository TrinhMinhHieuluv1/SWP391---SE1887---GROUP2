<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>authentication</filter-name>
        <filter-class>filter.authentication</filter-class>
    </filter>
    <filter>
        <filter-name>authenticationBillProvider</filter-name>
        <filter-class>filter.authenticationBillProvider</filter-class>
    </filter>
    <filter>
        <filter-name>RequireEmailToCustomer</filter-name>
        <filter-class>filter.RequireEmailToCustomer</filter-class>
    </filter>
    <filter>
        <filter-name>authenticationManager</filter-name>
        <filter-class>filter.authenticationManager</filter-class>
    </filter>
    <filter>
        <filter-name>authenticationSeller</filter-name>
        <filter-class>filter.authenticationSeller</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationInsuran</filter-name>
        <filter-class>filter.authenticationInsurance</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationBillProvider</filter-name>
        <url-pattern>/bill_provider/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authentication</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireEmailToCustomer</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenticationManager</filter-name>
        <url-pattern>/manager/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenticationSeller</filter-name>
        <url-pattern>/seller/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationInsuran</filter-name>
        <url-pattern>/insurance/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>congcu</servlet-name>
        <servlet-class>controller.calSaving</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>congcu2</servlet-name>
        <servlet-class>controller.calLoan</servlet-class>
    </servlet>
    <!--    <servlet>
        <servlet-name>tinhvay</servlet-name>
        <servlet-class>controller.tinhvay</servlet-class>
    </servlet>-->
    <servlet>
        <servlet-name>ShowFB</servlet-name>
        <servlet-class>controller.ShowFB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindFeedback</servlet-name>
        <servlet-class>controller.FindFeedback</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>congcu</servlet-name>
        <url-pattern>/congcu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>congcu2</servlet-name>
        <url-pattern>/congcu2</url-pattern>
    </servlet-mapping>
    <!--    <servlet-mapping>
        <servlet-name>tinhvay</servlet-name>
        <url-pattern>/tinhvay</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>ShowFB</servlet-name>
        <url-pattern>/showfb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindFeedback</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
